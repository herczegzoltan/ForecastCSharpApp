<Window x:Class="WPFApp.Views.ForecastView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp.Views"
        mc:Ignorable="d"
        Title="ForecastView" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="CurrentSummary"             Grid.Row="1" Grid.Column="1"></TextBlock>
        <TextBlock x:Name="CurrentTemperature"         Grid.Row="2" Grid.Column="1"></TextBlock>
        <TextBlock x:Name="CurrentApparentTemperature" Grid.Row="3" Grid.Column="1"></TextBlock>
        <TextBlock x:Name="CurrentPressure"            Grid.Row="4" Grid.Column="1"></TextBlock>
        <TextBlock x:Name="CurrentWindSpeed"           Grid.Row="5" Grid.Column="1"></TextBlock>
        <TextBlock x:Name="CurrentHumidity"            Grid.Row="6" Grid.Column="1"></TextBlock>
        <TextBlock x:Name="CurrentUvIndex"             Grid.Row="7" Grid.Column="1"></TextBlock>

        <Button x:Name="GetForecastInformation"        Grid.Row="8" Grid.Column="1">Request</Button>
    </Grid>
</Window>
